{
  "compileOnSave": false,
  "compilerOptions": {
    "removeComments": true,
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "./src/app/*",
        "./src/@models",
        "./src/@types",
        "**/node_modules/**/*"
      ],
      "@angular/*": ["../node_modules/@angular/*"],
      "webpack/*": ["../node_modules/webpack/*"]
    }
  }
}
